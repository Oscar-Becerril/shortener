<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <h1>Recortador de URLs</h1>
        <form action="/shortURL" method="POST" class="my-4 row" g-2>
            <div class="col-auto">
                <label for="longURL" class="visually-hidden">URL</label>
                <input required placeholder="URL" type="url" name="longURL" id="longURL" class="form-control">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-success">Recortar</button>
            </div>
            
            
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>URL</th>
                    <th>URL Recortado</th>
                    <th>Fecha de recorte</th>
                </tr>
                <tbody>
                    <% shortURLs.forEach(shortUrl => { %>
                        <tr>
                          <td><a href="<%= shortUrl.longURL %>"><%= shortUrl.longURL %></a></td>
                          <td><a href="<%= shortUrl.shortURL %>"><%= "https://localhost:5000/" + shortUrl.shortURL %></a></td>
                          <td><%= shortUrl.date %></td>
                        </tr>
                      <% }) %>
                </tbody>
            </thead>
        </table>
    </div>
</body>
</html>